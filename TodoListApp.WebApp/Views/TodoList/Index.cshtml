@model IEnumerable<TodoListApp.WebApp.Models.TodoListWebApiModel>

<h1>Todo Lists</h1>

<ul>
    @foreach (var todoList in Model)
    {
        <li>
            @todoList.Name
            <a asp-action="Details" asp-route-id="@todoList.Id">View Tasks</a>
        </li>
    }
</ul>

@foreach (var todoList in Model)
{
    <li>
        @todoList.Name
        <a asp-action="Details" asp-route-id="@todoList.Id">View Tasks</a>
        <form method="post" asp-action="Delete" asp-route-id="@todoList.Id">
            <button type="submit">Delete</button>
        </form>
    </li>
}
